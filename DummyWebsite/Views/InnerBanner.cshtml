@using Sitecore
@using Sitecore.Data
@using Sitecore.Mvc.Presentation
@using Sitecore.Mvc
@using Sitecore.Data.Items
@using DummyWebsite

@{
    //extract the current db
    Sitecore.Data.Database database = Sitecore.Context.Database;
    string datasource = RenderingContext.Current.Rendering.DataSource;

    Item item = database.GetItem(datasource);

    Sitecore.Data.Fields.ImageField image = item.Fields["Image"];

    string imagePath = Sitecore.Resources.Media.MediaManager.GetMediaUrl(image.MediaItem);

}

<style>
    .bradcam_bg_1 {
    background-image: url(@imagePath);
}

</style>

<div class="bradcam_area bradcam_bg_1">
    <div class="container">
        <div class="row">
            <div class="col-xl-12">
                <div class="bradcam_text text-center">
                    <h3>@Html.Sitecore().Field("Title",item)</h3>
                </div>
            </div>
        </div>
    </div>
</div>
